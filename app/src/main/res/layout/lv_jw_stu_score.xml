<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 画横线-->

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_score_school_year"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#8b8b8b"
            app:layout_widthPercent="20%"
            />

        <TextView
            android:id="@+id/tv_score_term"
            android:layout_toRightOf ="@id/tv_score_school_year"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#8b8b8b"
            app:layout_widthPercent="10%"
            />

        <TextView
            android:id="@+id/tv_score_course_name"
            android:layout_toRightOf ="@id/tv_score_term"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#8b8b8b"
            android:singleLine="true"
            app:layout_widthPercent="50%"
            />

        <TextView
            android:id="@+id/tv_score_grade"
            android:layout_toRightOf ="@id/tv_score_course_name"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#8b8b8b"
            app:layout_widthPercent="10%"
            />
        <TextView
            android:id="@+id/tv_score_fix_grade"
            android:layout_toRightOf ="@id/tv_score_grade"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#8b8b8b"
            app:layout_widthPercent="10%"
            />
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>